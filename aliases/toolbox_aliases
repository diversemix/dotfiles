

tool_search() {
    if [ "$1" == "" ] ; then echo Need a search term as an argument! ; return 1 ; fi
    echo
    ARGS="--heading --break --match $1 "
    ack -i ${TOOLBOX_DATA}/pocket ${ARGS} | cut -d '|' -f2- | sed -e "s/\\\/\n  /g" | colorize blue $1 | colorize green ${TOOLBOX_DATA}
    ack -i ${TOOLBOX_DATA}/toolbox ${ARGS} | cut -d '|' -f2- | sed -e "s/\\\/\n  /g" | colorize blue $1  | colorize green ${TOOLBOX_DATA}

}

cheatsheet() {
    curl -s "https://raw.githubusercontent.com/duckduckgo/zeroclickinfo-goodies/master/share/goodie/cheat_sheets/json/$1.json" | grep -A 2 $2
}

tool_add() {
    echo -n "Enter the filename/category > "
    read tfile

    echo -n "Enter the comma separated list of tags > "
    read tags

    echo "Now the useful info..."
    read info

    echo "$tags | $info" >> ${TOOLBOX_DATA}/pocket/$tfile
}

alias ts=tool_search
alias ta=tool_add
alias cheat=cheatsheet

echo -n "Got toolbox..."
# EOF
